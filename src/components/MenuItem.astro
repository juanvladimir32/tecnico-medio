---
const {title, url} = Astro.props;
---

<a href={url}>{title}</a>

<style>
  a {
    border-radius: 3px;
    padding: 5px 20px;
    color: var(--primary-text-color);
    font-size: 1.5rem;
  }

  a:hover {
    background-color: var(--secondary-color);
    color: var(--secondary-text-color);
  }
</style>