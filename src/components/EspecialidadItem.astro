---
const { nombre, descripcion, detalle, imagen } = Astro.props;
---

<article>
  <img src=`/img/home/${imagen}` alt="..." />
  <p>{nombre}</p>
  <p>{descripcion}</p>
  <a href="#">{detalle}</a>
</article>

<style>
  article {
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  article > img {
    width: 90%;
  }

  article > a {
    padding: 5px 20px;
    border-radius: 5px;
    background-color: var(--secondary-color);
    color: var(--primary-text-color);
    font-size: 1.5rem;
    font-weight: bold;
  }

  article > p:nth-child(2) {
    margin-top: 15px;
    margin-bottom: 15px;
    color: var(--primary-color);
    font-weight: bold;
    font-size: 2.1rem;
    text-align: center;
    line-height: 2.1rem;
  }

  article > p:nth-child(3) {
    margin-bottom: 15px;
    font-size: 1.9rem;
    line-height: 2rem;
  }
</style>
